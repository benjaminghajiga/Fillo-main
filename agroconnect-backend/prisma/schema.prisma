// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  passwordHash String
  role      String     @default("BUYER") // FARMER, BUYER, ADMIN
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  farmerProfile FarmerProfile?
  buyerProfile  BuyerProfile?
  products      Product[]
  orders        Order[]
  payments      Payment[]
  earnings      Earning[]
}

model FarmerProfile {
  id        String     @id @default(cuid())
  userId    String     @unique
  farmName  String
  location  String
  region    String?
  crops     String? // JSON array of crop types
  phone     String?
  bio       String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BuyerProfile {
  id          String     @id @default(cuid())
  userId      String     @unique
  companyName String
  location    String
  phone       String?
  website     String?
  bio         String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          String     @id @default(cuid())
  farmerId    String
  name        String
  description String?
  category    String // e.g., "Vegetables", "Grains", "Fruits"
  quantity    Float
  unit        String // e.g., "kg", "bags", "tons"
  pricePerUnit Float
  available   Boolean    @default(true)
  image       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  farmer User @relation(fields: [farmerId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([farmerId])
  @@index([category])
}

model Order {
  id          String     @id @default(cuid())
  buyerId     String
  productId   String
  quantity    Float
  totalPrice  Float
  status      String     @default("PENDING") // PENDING, CONFIRMED, PAYMENT_PROCESSING, PAID, SHIPPED, DELIVERED, CANCELLED
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  buyer    User    @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  product  Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  payments Payment[]

  @@index([buyerId])
  @@index([productId])
  @@index([status])
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String
  userId        String
  type          String        // PAYSTACK, FLUTTERWAVE, STACKS_CRYPTO
  status        String        @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED, REFUNDED
  amount        Float
  currency      String        @default("NGN") // Nigerian Naira default, or other currencies
  reference     String?       // Payment provider reference (Paystack ref, Flutterwave ref, tx hash)
  metadata      String?       // JSON metadata for blockchain tx details
  walletAddress String?       // For Stacks crypto payments
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([userId])
  @@index([reference])
  @@index([status])
}

model Earning {
  id            String     @id @default(cuid())
  farmerId      String
  orderId       String
  productId     String
  amount        Float      // Total earnings from this order
  quantitySold  Float
  status        String     @default("PENDING") // PENDING, COMPLETED, WITHDRAWN
  description   String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  farmer User @relation(fields: [farmerId], references: [id], onDelete: Cascade)

  @@index([farmerId])
  @@index([status])
}
